{
    "name": "Tabby",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "clipboardWrite"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "lib/utils.js",
                "lib/dom-utils.js",                
                "clipboard.js",
                "content-scripts/ui-component.js",
                "content-scripts/hud.js"            
            ],
            "css": [
                "content-scripts/tabby.css"
            ]
        }
    ],
    "commands": {
        "log-all-urls": {
        "suggested_key": "Ctrl+Shift+Y",
        "description": "Write the urls of all open tabs to the clipboard"
        }
    },
    "web_accessible_resources": [{
        "resources": ["pages/hud.html"],
        "matches": ["<all_urls>"]
    }]
}